<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.eim_coursepack.TitleFragment"
        tools:layout="@layout/fragment_title">
        <action
            android:id="@+id/action_titleFragment_to_mainMenuFragment"
            app:destination="@id/mainMenuFragment" />
    </fragment>
    <fragment
        android:id="@+id/mainMenuFragment"
        android:name="com.example.eim_coursepack.MainMenuFragment"
        tools:layout="@layout/fragment_main_menu">
        <action
            android:id="@+id/action_mainMenuFragment_to_unit1Fragment"
            app:destination="@id/unit1Fragment" />
    </fragment>
    <fragment
        android:id="@+id/unit1Fragment"
        android:name="com.example.eim_coursepack.Unit1Fragment"
        tools:layout="@layout/fragment_unit1">
        <action
            android:id="@+id/action_unit1Fragment_to_unit1Lesson1"
            app:destination="@id/unit1Lesson1" />
    </fragment>
    <fragment
        android:id="@+id/unit1Lesson1"
        android:name="com.example.eim_coursepack.Unit1Lesson1"
        tools:layout="@layout/fragment_unit1_lesson1" >
        <action
            android:id="@+id/action_unit1Lesson1_to_unit1Quiz1MCFragment"
            app:destination="@id/unit1Quiz1MCFragment" />
    </fragment>
    <fragment
        android:id="@+id/unit1Quiz1MCFragment"
        android:name="com.example.eim_coursepack.Unit1Quiz1MCFragment"
        tools:layout="@layout/fragment_unit1_quiz1_m_c">
        <action
            android:id="@+id/action_unit1Quiz1MCFragment_to_unit1Quiz1IdentificationFragment"
            app:destination="@id/unit1Quiz1IdentificationFragment" />
    </fragment>
    <fragment
        android:id="@+id/unit1Quiz1IdentificationFragment"
        android:name="com.example.eim_coursepack.Unit1Quiz1IdentificationFragment"
        tools:layout="@layout/fragment_unit1_quiz1_identification" >
        <argument
            android:name="numQuestions"
            app:argType="integer" />
        <argument
            android:name="numCorrect"
            app:argType="integer" />
        <action
            android:id="@+id/action_unit1Quiz1IdentificationFragment_to_uni1Quiz1ScoreFragment"
            app:destination="@id/uni1Quiz1ScoreFragment"
            app:popUpTo="@id/unit1Lesson1" />
    </fragment>
    <fragment
        android:id="@+id/uni1Quiz1ScoreFragment"
        android:name="com.example.eim_coursepack.Unit1Quiz1ScoreFragment"
        android:label="fragment_uni1_quiz1_score"
        tools:layout="@layout/fragment_unit1_quiz1_score" >
        <argument
            android:name="numQuestions"
            app:argType="integer" />
        <argument
            android:name="numCorrect"
            app:argType="integer" />
        <action
            android:id="@+id/action_uni1Quiz1ScoreFragment_to_unit1Lesson1"
            app:destination="@id/unit1Lesson1"
            app:popUpTo="@id/unit1Lesson1" />
    </fragment>
</navigation>