<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AllVideos">


    <data>
        <variable
            name="video"
            type="com.example.eim_coursepack.AllVideos" />
    </data>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#BEE3E4">


        <VideoView
            android:id="@+id/videoView"
            android:layout_width="0dp"
            android:layout_height="238dp"
            android:layout_marginStart="@dimen/SmallTopMargin"
            android:layout_marginLeft="@dimen/SmallTopMargin"
            android:layout_marginTop="@dimen/SmallTopMargin"
            android:layout_marginEnd="@dimen/SmallTopMargin"
            android:layout_marginRight="@dimen/SmallTopMargin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/TopMargin"
            android:background="@color/white"
            android:padding="?attr/listPreferredItemPaddingRight"
            android:text="@{video.Videoname.name}"
            android:textColor="#050505"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="@string/Playing" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="248dp"
            android:layout_height="105dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:text="@string/encourage"
            android:textColor="#070707"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/videoView"
            app:layout_constraintStart_toStartOf="@+id/videoView"
            app:layout_constraintTop_toBottomOf="@+id/videoView"
            app:layout_constraintVertical_bias="0.22000003" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>