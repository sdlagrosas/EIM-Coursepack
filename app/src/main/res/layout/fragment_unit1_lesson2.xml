<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Unit1Lesson2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <ScrollView
            android:id="@+id/scrollView2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="@+id/guideline12"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline13"
            app:layout_constraintVertical_bias="1.0">

            <LinearLayout style="@style/linearlayout_style">

                <TextView
                    android:id="@+id/textView2"
                    style="@style/LessonTitle_contentproper"

                    android:text="@string/lesson_1.2_title" />

                <TextView
                    android:id="@+id/Content1_2_1"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.1" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_1"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/Content1_2_2"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.2" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_2"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/Content1_2_3"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.3" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_3"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/Content1_2_4"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.4" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_4"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/Content1_2_5"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.5" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_5"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/Content1_2_6"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.6" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_6"
                    tools:src="@tools:sample/avatars" />

                <TextView
                    android:id="@+id/Content1_2_7"
                    style="@style/Content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Content1.2.7" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/vertical_images"
                    android:layout_marginStart="@dimen/smallMargin_lessonContent"
                    android:layout_marginLeft="@dimen/smallMargin_lessonContent"
                    android:layout_marginEnd="@dimen/smallMargin_lessonContent"
                    android:layout_marginRight="@dimen/smallMargin_lessonContent"
                    android:contentDescription="@string/contentdescription"
                    app:srcCompat="@drawable/ic_unit1_lesson2_7"
                    tools:src="@tools:sample/avatars" />

                <Button
                    android:id="@+id/quiz2Button"
                    style="@style/allbuttons"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/take_quiz" />


            </LinearLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.0"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="1.0"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.05"
            app:layout_constraintGuide_begin="20dp" />

        <TextView
            android:id="@+id/textView"
            style="@style/lessonNumber"
            android:text="@string/Lesson1.2"
            app:layout_constraintBottom_toTopOf="@+id/guideline13"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline11" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>