<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Unit3Fragment">

    <data>
        <variable
            name="unit"
            type="com.example.eim_coursepack.Unit3Fragment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/skyblue">

        <ImageButton
            android:id="@+id/unit3Lesson1Button"
            android:layout_width="@dimen/smallIcons"
            android:layout_height="@dimen/smallIcons"
            android:layout_marginStart="@dimen/StartMargin"
            android:layout_marginLeft="@dimen/StartMargin"
            android:background="#A2C2EA"
            android:contentDescription="@string/contentdescription"
            android:src="@drawable/ic_icon__2_"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />

        <TextView
            android:id="@+id/Unit3text"
            style="@style/HeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/SmallTopMargin"
            android:text="@string/unit_3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/unit3TitleView"
            style="@style/subHeadText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/unit_3_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Unit3text" />

        <ImageButton
            android:id="@+id/unit3Lesson2Button"
            android:layout_width="@dimen/smallIcons"
            android:layout_height="@dimen/smallIcons"
            android:layout_marginStart="@dimen/StartMargin"
            android:layout_marginLeft="@dimen/StartMargin"
            android:background="#A2C2EA"
            android:contentDescription="@string/contentdescription"
            android:src="@drawable/ic_icon__2_"
            app:layout_constraintBottom_toTopOf="@+id/guideline8"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline7" />

        <ImageButton
            android:id="@+id/unit3Lesson3Button"
            android:layout_width="@dimen/smallIcons"
            android:layout_height="@dimen/smallIcons"
            android:layout_marginStart="@dimen/StartMargin"
            android:layout_marginLeft="@dimen/StartMargin"
            android:background="#A2C2EA"
            android:contentDescription="@string/contentdescription"
            android:src="@drawable/ic_icon__2_"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline8" />

        <TextView
            android:id="@+id/lesson1title"
            style="@style/regulartext"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/lesson_3.1_title"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson1Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson1Button"
            app:layout_constraintTop_toTopOf="@+id/unit3Lesson1Button" />

        <TextView
            android:id="@+id/lesson2title"
            style="@style/regulartext"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/lesson_3.2_title"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson2Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson2Button"
            app:layout_constraintTop_toTopOf="@+id/unit3Lesson2Button" />

        <TextView
            android:id="@+id/lesson3title"
            style="@style/regulartext"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/lesson_3.3_title"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson3Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson3Button"
            app:layout_constraintTop_toTopOf="@+id/unit3Lesson3Button" />


        <ImageButton
            android:id="@+id/unit3Lesson4Button"
            android:layout_width="@dimen/smallIcons"
            android:layout_height="@dimen/smallIcons"
            android:layout_marginStart="@dimen/StartMargin"
            android:layout_marginLeft="@dimen/StartMargin"
            android:background="#A2C2EA"
            android:contentDescription="@string/contentdescription"
            android:src="@drawable/ic_icon__2_"
            app:layout_constraintBottom_toTopOf="@+id/guideline10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/guideline9" />

        <TextView
            android:id="@+id/lesson4title"
            style="@style/regulartext"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:text="@string/lesson_3.4_title"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson4Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson4Button"
            app:layout_constraintTop_toTopOf="@+id/unit3Lesson4Button" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.2"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.35"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.50"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"
            app:layout_constraintGuide_begin="20dp" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.80"
            app:layout_constraintGuide_begin="20dp" />

        <TextView
            android:id="@+id/unit3Lesson1Progress"
            android:layout_width="109dp"
            android:layout_height="20dp"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="2dp"
            android:gravity="center|center_horizontal"
            android:text="@{unit.unit3LessonScoreText[0]}"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson1Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson1Button"
            app:layout_constraintTop_toBottomOf="@+id/lesson1title" />

        <TextView
            android:id="@+id/unit3Lesson2Progress"
            android:layout_width="109dp"
            android:layout_height="20dp"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="2dp"
            android:gravity="center|center_horizontal"
            android:text="@{unit.unit3LessonScoreText[1]}"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson2Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson2Button"
            app:layout_constraintTop_toBottomOf="@+id/lesson2title" />

        <TextView
            android:id="@+id/unit3Lesson3Progress"
            android:layout_width="109dp"
            android:layout_height="20dp"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="2dp"
            android:gravity="center|center_horizontal"
            android:text="@{unit.unit3LessonScoreText[2]}"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson3Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson3Button"
            app:layout_constraintTop_toBottomOf="@+id/lesson3title" />

        <TextView
            android:id="@+id/unit3Lesson4Progress"
            android:layout_width="109dp"
            android:layout_height="20dp"
            android:layout_marginStart="57dp"
            android:layout_marginLeft="57dp"
            android:layout_marginTop="2dp"
            android:gravity="center|center_horizontal"
            android:text="@{unit.unit3LessonScoreText[3]}"
            app:layout_constraintBottom_toBottomOf="@+id/unit3Lesson4Button"
            app:layout_constraintStart_toEndOf="@+id/unit3Lesson4Button"
            app:layout_constraintTop_toBottomOf="@+id/lesson4title" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>