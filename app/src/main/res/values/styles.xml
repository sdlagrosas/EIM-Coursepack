<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="regulartext">
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">#121111</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="allbuttons">
        <item name="android:background">#521887</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="HeadText">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subHeadText">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">#101010</item>
        <item name="android:textSize">20sp</item>
        <item name= "android:gravity">center</item>
    </style>

    <style name="romanstyle">
        <item name="android:fontFamily">@font/im_fell_english_sc</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
    </style>

    <!--Use this style for Lesson Titles in fragment_unitX_lessonX example Basic Concepts and Principles of Electricity-->
    <style name="LessonTitle_contentproper" parent="subHeadText">
        <item name="android:layout_width">@dimen/Lesson_title_content_proper</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/SmallTopMargin</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!--Use this style for Lesson numbers in fragment_unitX_lessonX example Lesson 1.1-->
    <style name="lessonNumber" parent="regulartext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#052743</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <!--Use this style for Lesson Content text in fragment_unitX_lessonX example The electricity is the movement of.... etc.-->
    <style name="Content" parent="regulartext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/smallMargin_lessonContent</item>
        <item name="android:layout_marginRight">@dimen/smallMargin_lessonContent</item>
        <item name="android:padding">@dimen/smallpadding</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>
    <!--Use this style as the linearlayout format for fragment_unitX_lessonX example Lesson 1.1-->
    <style name="linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/smallpadding</item>
    </style>
</resources>